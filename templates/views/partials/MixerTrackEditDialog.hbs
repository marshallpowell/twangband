<!-- begin mixerTrackEditDialog -->
<script id="mixerTrackEditDialogPartial" type="text/x-handlebars-template" xmlns="http://www.w3.org/1999/html">

    <div id="trackInfo\{{trackDto.uiId}}" class="modalDialogForm" style="padding:5px;">
        \{{#if readOnly}}
        <div class="row">
            <div class="form-group">
                <label for="mixerTrackEditDialogTrackName">Track Name</label><br />

                \{{trackDto.name}}</div>
            <div class="form-group">
                <label for="mixerTrackEditDialogTrackName">Description</label><br />
                \{{trackDto.description}}
            </div>
            <div class="form-group">
                <label for="mixerTrackEditDialogTrackName">Tags</label><br />
                \{{#each trackDto.tags}}
                \{{> tagInfo tag=this}}
                \{{/each}}
            </div>
        </div>

        \{{/if}}
        \{{#unless readOnly}}
        <form id="mixerTrackEditDialogForm" onsubmit=" tb.dialogs.mixer.track.updateTrack(); return false;">
            <input type="hidden" id="mixerTrackEditDialogTrackId" value="\{{trackDto.id}}"/>

            <div class="row">
                <div class="form-group row col-md-12" id="mixerTrackEditDialogNotifications"></div>
                <div class="form-group">
                    <label for="mixerTrackEditDialogTrackName">Track Name</label>
                    <input type="text" class="form-control" name="Track Name"
                           id="mixerTrackEditDialogTrackName" value="\{{trackDto.name}}"
                           placeholder="Enter a name for this track">
                </div>
                <div class="form-group">
                    <label for="mixerTrackEditDialogTrackDescription">Description</label> <textarea
                        class="form-control" name="Track Description"
                        id="mixerTrackEditDialogTrackDescription"
                        placeholder="Enter a description for this track">\{{trackDto.description}}</textarea>
                </div>
                <div class="form-group form-inline row col-md-12">
                    <label for="mixerTrackEditDialogIsPublic">Make Track Public</label>
                    <input type="checkbox" class="form-control" name="mixerTrackEditDialogIsPublic"
                           id="mixerTrackEditDialogIsPublic" \{{#if isPublic}}checked\{{/if}} />
                </div>
                <div class="form-group">
                    <label for="trackTags\{{trackDto.uiId}}">Intrument/genre tags</label>&nbsp;<i>(Hit enter after each
                    tag)</i><br/>
                    <select name='Track Tags' id='mixerTrackEditDialogTrackTags' multiple \{{disabled}}>
                        \{{#each trackDto.tags}}
                        <option value="\{{this}}" selected>\{{this}}</option>
                        \{{/each}}

                    </select>
                </div>
            </div>
            <div class="modal-footer modalNotificationFooter">
                <button type="submit" class="btn btn-primary btn-sm">Save</button>
                <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            </div>
        </form>
        \{{/unless}}
    </div>
</script>
<div id="mixerTrackEditDialog" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{> siteName }}
                <button type="button" class="close" id="modalXCloseBtn" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body ">
                <div id="mixerTrackEditDialogBody"><p id="mixerTrackEditDialogFoo"></p></div>
            </div>

        </div>

    </div>
</div>
<!-- end mixerTrackEditDialog -->