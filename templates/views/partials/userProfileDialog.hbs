<!-- start user profile partial -->
<script id="userProfilePartial" type="text/x-handlebars-template">

    <div id="userProfilePartialBody" style="text-align:center;padding:5px;">
        <div class="row">
            <div class="col-lg-4 col-md-4 col-sm-12">
                <img src="/uploads/users/profile/\{{userDto.profilePic}}" width="75" height="75"/>
            </div>
            <div class="col-lg-8 col-md-8 col-sm-12">
                <div class="row">
                    <h4>\{{userDto.firstName}} \{{userDto.lastName}} <div style="float:left; padding-left: 2px;" id="user_like\{{userDto.uiId}}">follow</div></h4>
                    <!--<div style="float:left; padding-left: 2px;" id="user_like\{{userDto.uiId}}">like</div>-->
                </div>
                <div class="row">
                    <div class="userProfileTags">
                        \{{#each userDto.tags}}
                        <button type="button" class="btn btn-primary btn-xs" disabled>\{{ this }}</button>
                        \{{/each}}
                    </div>
                </div>
            </div>
        </div>
    </div>

</script>
<!-- end user profile partial -->

<div id="userProfileDialog" class="modal" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                {{> siteName }}
                <button type="button" class="close" id="modalXCloseBtn" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body ">
                <div id="userProfileDialogBody">


                </div>
            </div>

        </div>

    </div>
</div>
